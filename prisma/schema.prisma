generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String           @id @default(cuid())
  email         String           @unique
  emailVerified DateTime?
  role          String           @default("user")
  createdAt     DateTime         @default(now())
  accounts      Account[]
  progress      LessonProgress[]
  microWins     MicroWin[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model LessonProgress {
  id          String    @id @default(cuid())
  userId      String
  courseId    String
  lessonSlug  String
  completed   Boolean   @default(false)
  completedAt DateTime?
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId, lessonSlug])
  @@index([userId])
  @@index([courseId])
}

model Job {
  id          String    @id @default(cuid())
  externalId  String
  company     String
  companySlug String
  title       String
  location    String
  type        String
  remote      Boolean   @default(false)
  salary      String?
  postedAt    DateTime?
  applyUrl    String
  category    String
  tags        String
  source      String
  isActive    Boolean   @default(true)
  scrapedAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([externalId, companySlug])
  @@index([category])
  @@index([remote])
  @@index([isActive])
  @@index([companySlug])
}

model ScrapeLog {
  id           String   @id @default(cuid())
  companySlug  String
  status       String
  jobsFound    Int      @default(0)
  errorMessage String?
  createdAt    DateTime @default(now())

  @@index([companySlug])
  @@index([createdAt])
}

model JobClick {
  id          String   @id @default(cuid())
  jobId       String
  company     String
  companySlug String
  jobTitle    String
  applyUrl    String
  clickedAt   DateTime @default(now())

  @@index([companySlug])
  @@index([clickedAt])
  @@index([jobId])
}

model MicroWin {
  id         String   @id @default(cuid())
  content    String
  promptType String
  authorName String?
  authorId   String?
  status     String   @default("approved")
  createdAt  DateTime @default(now())
  author     User?    @relation(fields: [authorId], references: [id])

  @@index([status])
  @@index([promptType])
  @@index([createdAt])
}

model Activity {
  id        String   @id @default(cuid())
  type      String
  message   String
  metadata  String?
  createdAt DateTime @default(now())

  @@index([type])
  @@index([createdAt])
}

model PagePresence {
  id         String   @id @default(cuid())
  visitorId  String
  page       String
  country    String?
  lastSeenAt DateTime @default(now())

  @@unique([visitorId, page])
  @@index([page])
  @@index([lastSeenAt])
  @@index([country])
}

model Link {
  id          String   @id @default(cuid())
  title       String
  description String?
  url         String
  category    String?
  featured    Boolean  @default(false)
  image       String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([featured])
  @@index([order])
  @@index([isActive])
}

model LinkClick {
  id        String   @id @default(cuid())
  linkId    String
  linkTitle String
  linkUrl   String
  clickedAt DateTime @default(now())

  @@index([linkId])
  @@index([clickedAt])
}

model BlogView {
  id        String   @id @default(cuid())
  slug      String
  title     String
  viewedAt  DateTime @default(now())

  @@index([slug])
  @@index([viewedAt])
}

model BlogPost {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  excerpt     String
  content     String
  author      String   @default("Nyaradzo")
  category    String   @default("Career")
  tags        String   @default("[]")
  featured    Boolean  @default(false)
  image       String?
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([featured])
  @@index([category])
  @@index([publishedAt])
}
